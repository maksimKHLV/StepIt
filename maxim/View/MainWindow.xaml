<Window x:Class="kargo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kargo" xmlns:ViewModel ="clr-namespace:kargo.ViewModel"
        d:DataContext="{d:DesignInstance Type=ViewModel:MainWindowViewModel}"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow"  ResizeMode="NoResize" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition></RowDefinition>
            
        </Grid.RowDefinitions>
        <Button Command="{Binding ExitClick}" Grid.Row="0" Content="exit" HorizontalAlignment="Right" >
        </Button>
        <Label Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Main window"></Label>
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
